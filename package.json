{
  "name": "@violentmonkey/shortcut",
  "version": "1.4.4",
  "description": "Register a shortcut for a function",
  "author": "Gerald <gera2ld@live.com>",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "prepare": "husky || true",
    "dev": "vite",
    "prepublishOnly": "pnpm build",
    "lint": "eslint",
    "test": "vitest --run",
    "clean": "del-cli dist",
    "build:js": "vite build --mode iife && vite build --mode es",
    "build:types": "tsc -p tsconfig.prod.json",
    "build": "pnpm lint && pnpm test && pnpm clean && pnpm /^build:/",
    "demo:dev": "vite --config vite.config.ts --mode demo",
    "demo:build": "vite build --mode demo",
    "demo:cp": "cp src/demo/index.html dist/index.iife.js dist/demo",
    "demo": "pnpm build && pnpm demo:build && pnpm demo:cp"
  },
  "unpkg": "dist/index.iife.js",
  "jsdelivr": "dist/index.iife.js",
  "repository": "git@github.com:violentmonkey/vm-shortcut.git",
  "nyc": {
    "include": [
      "src/**"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/index.iife.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "typings": "dist/index.d.ts",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "del-cli": "^7.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "vue": "^3.5.26"
  }
}
